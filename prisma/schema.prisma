generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

enum Role {
  ADMIN_ROLE
  USER_ROLE
  ADVISER_ROLE
}

model Country {
  id    Int    @id @default(autoincrement())
  name  String
  image String
  states State[]
}

model State {
  id        Int     @id @default(autoincrement())
  name      String
  image     String
  countryId Int
  country   Country @relation(fields: [countryId], references: [id])
}

model TicketDemo {
  id             String    @id @default(uuid())
  number         Int
  createdAt      DateTime  @default(now())
  handleAtModule String?
  handleAt       DateTime?
  done           Boolean
}

model User {
  id             Int    @id @default(autoincrement())
  firstName      String
  lastName       String
  photo          String?
  userType       Role    @default(USER_ROLE)
  email          String
  emailValidated Boolean @default(false)
  password       String
}
